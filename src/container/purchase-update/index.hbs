<div class="page">
  <main class="main">
    {{#with data.purchase}}
    <form method="POST" action="/purchase-update?id={{id}}" class="form-card">
      {{> heading title='Зміна данних'}}
      <div>ID: {{id}}</div>

      {{>divider}}
      <div class="row">
        {{>field label="Ім'я" name="firstname" value=firstname}}
        {{>field label="Прізвище" name="lastname" value=lastname}}
      </div>
      <div class="row">
        {{>field readonly label="Телефон" name="phone" value=phone}}
        {{>field readonly label="Пошта" name="email" value=email}}
      </div>
      {{>divider}}



      {{>button text="Зберегти дані"}}
      <a href="/purchase-list">Повернутися до списку</a>

    </form>
    {{/with}}

  </main>

</div>